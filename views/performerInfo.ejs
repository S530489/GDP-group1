      <div class="radio">
        <label><input type="radio" name="optradio">Right</label>
      </div>
      </div>
  
    </form>
  
  <div class="w3-content w3-display-container">
      <b>Head and Neck Measurements: </b><br>
  <div class="w3-display-container mySlides1">
    
    <img src="images/head.jpg" width="150dp" height="150dp">
    <div class="w3-display-bottomleft w3-large w3-container w3-padding-16 w3-black">
        Head Circumference: <input type="text" name="firstname">
    </div>
  </div>
  
  <div class="w3-display-container mySlides1">
      
    <img src="images/neck.jpg" width="150dp" height="150dp">
    <div class="w3-display-bottomright w3-large w3-container w3-padding-16 w3-black">
        Neck: <input type="text" name="firstname"> 
    </div>
  </div>

  <button class="w3-button w3-display-left w3-black" onclick="HNplusDivs(-1)">&#10094;</button>
  <button class="w3-button w3-display-right w3-black" onclick="HNplusDivs(1)">&#10095;</button>
  
</div>

<script>
    var HNslideIndex = 1;
    HNshowDivs(HNslideIndex);
    
    function HNplusDivs(n) {
      HNshowDivs(HNslideIndex += n);
    }
    
    function HNshowDivs(n) {
      var i;
      var x = document.getElementsByClassName("mySlides1");
      if (n > x.length) {HNslideIndex = 1}    
      if (n < 1) {HNslideIndex = x.length}
      for (i = 0; i < x.length; i++) {
         x[i].style.display = "none";  
      }
      x[HNslideIndex-1].style.display = "block";  
    }
  
  
    </script>
