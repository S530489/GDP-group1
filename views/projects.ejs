  margin: auto;
  border: black;
  text-align: center;
  font-family: "Comic Sans MS", cursive, sans-serif;
}
.card button {
  border: none;
  outline: 0;
  padding: 12px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 100%;
  font-size: 18px;
}

.card button:hover {
  opacity: 0.7;
}

progress {
  border: none;
  width: 100%;
  height: 30px;
  background: white;
  text-align: center
  
}

progress {
  color: lightblue;
}
progress:before {
  content: attr(data-content);
}

progress::-webkit-progress-value {
  background: green;
}

</style>
</head>

